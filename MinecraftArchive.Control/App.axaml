<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MinecraftArchive.control.App"
			 RequestedThemeVariant="Light">
    <Application.Styles>
        <FluentTheme/>
		<StyleInclude Source="/Style/Button/AccentButtonStyle.axaml"/>
		<StyleInclude Source="/Style/Bar/ToolBarStyle.axaml"/>
		<StyleInclude Source="/Style/Bar/MessageTipsBarStyle.axaml"/>
		<StyleInclude Source="/Style/Bar/BottomActionBarStyle.axaml"/>
		<StyleInclude Source="/Style/Bar/ProgressBar.axaml"/>
		<StyleInclude Source="/Style/FilpViewStyle.axaml"/>
		<StyleInclude Source="/Style/TipBarViewStyle.axaml"/>
    </Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://MinecraftArchive.Control/Theme/BasicResource.axaml"/>
				<ResourceInclude Source="avares://MinecraftArchive.Control/Theme/LightResource.axaml"/>
				<ResourceInclude Source="avares://MinecraftArchive.Control/IconPack.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
